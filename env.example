# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=organic_agriculture_ai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Kafka Configuration (for streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_WEATHER=weather_data
KAFKA_TOPIC_MARKET=market_data
KAFKA_TOPIC_IOT=iot_sensor_data

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agriculture_ai.log

# Data Processing Configuration
BATCH_SIZE=1000
MAX_WORKERS=4
DATA_RETENTION_DAYS=365

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# SMS Configuration (for alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
